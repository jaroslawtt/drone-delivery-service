{
  "name": "backend",
  "private": true,
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc -w",
    "start": "node ./build/src/main.js",
    "start:dev": "nodemon --exec \"node --loader ts-paths-esm-loader\" src/main.ts",
    "start:watch": "node --watch build/src/main.js",
    "migration:generate": "npm run build && drizzle-kit generate",
    "migration:run": "npm run build && drizzle-kit push"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/static": "^8.1.0",
    "@nestjs/common": "^11.0.11",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.11",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-fastify": "^11.0.11",
    "@nestjs/swagger": "^11.0.3",
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.39.3",
    "fastify": "^5.2.1",
    "fastify-type-provider-zod": "^4.0.2",
    "jose": "^5.9.6",
    "ms": "^2.1.3",
    "nestjs-pino": "^4.3.0",
    "pg": "^8.13.3",
    "pino-http": "^10.4.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "trustedDependencies": [
    "@nestjs/core"
  ],
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/ms": "^2.1.0",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4",
    "eslint-plugin-nestjs": "^1.2.3",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "ts-paths-esm-loader": "^1.4.3",
    "tsconfig-paths": "^4.2.0"
  }
}
